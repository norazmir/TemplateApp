<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/updateCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Kontraktor"/>

        <EditText
            android:id="@+id/updateCompanyAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat Kontraktor"/>

        <EditText
            android:id="@+id/updateCompanyEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Kontraktor"/>

        <EditText
            android:id="@+id/updateCompanyContactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombor Telefon Kontraktor"/>
    </LinearLayout>




</RelativeLayout>